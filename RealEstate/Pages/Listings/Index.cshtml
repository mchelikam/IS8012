@model RealEstate.Pages.Listings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].DateOfListing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].ExpectedPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Available)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Listing) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfListing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Available)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
